extends tmpl/layout/layout.pug
include tmpl/pages/magazines/mixin-magazine-item
include tmpl/mixins/mixin-select.pug
include tmpl/mixins/mixin-input.pug

block content
  section.page-title-section
    .container
      h2.page-title
        img.page-title__icon(src='assets/images/icons/triangle-double-circle-icon.png' alt='#')
        span.page-title__text Lorem ipsum
  
  section.magazines-header
    .container
      .magazines-header-inner
        .block-intro
          span Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et dolore magvoluptatem.
        
  section.magazines-filter
    .container
      .magazines-filter-inner
        .magazines-filter-main
          - var years = [2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018]
          - var themes = ['theme 1', 'theme 2', 'theme 3', 'theme 4']
          - var islands = ['Tahiti (PPT)', 'Ahe (AHE)', 'Anaa (AAA)', 'Apataki(APK)', 'Aratika (RKA)', 'Arutua (AXR)', 'Hiva Oa (AUQ)']
          h4.magazines-filter__title Trier par :
          form.magazines-filter__form
            .magazines-filter__fields
              +select('magazine-island', 'île', years, 'select-item--custom')
              +select('magazine-year', 'Année', years, 'select-item--custom')
              +input('magazine-number', 'N°', '')
              +select('magazine-theme', 'Thème', themes, 'select-item--custom')
              +input('magazine-keyword', '', 'Rechercher par mots clés')
            button.form-btn.magazines-filter__button Ok

  section.magazines-section
    .container
      .magazines-section-inner
        .magazines
          .magazines-inner
            +magazine-item('Juillet 2018 - N°99', 'assets/images/magazines/magazine-1.jpg')
            +magazine-item('Juillet 2018 - N°98', 'assets/images/magazines/magazine-2.jpg')
            +magazine-item('Juillet 2018 - N°97', 'assets/images/magazines/magazine-3.jpg')
            +magazine-item('Juillet 2018 - N°96', 'assets/images/magazines/magazine-4.jpg')
            +magazine-item('Juillet 2018 - N°95', 'assets/images/magazines/magazine-5.jpg')
            +magazine-item('Juillet 2018 - N°94', 'assets/images/magazines/magazine-6.jpg')

